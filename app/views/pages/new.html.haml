%h3 Add subpage for: #{ page_path_title @page.path }
= form_for @page, url: @page.parent_page.nil? ? create_page_path() : |
  create_page_path(page_path: @page.parent_page.path) do |f| |
  %table
    %tr
      %td
        = f.label :name
      %td
        = f.text_field :name
    %tr
      %td
        = f.label :title
      %td
        = f.text_field :title
    %tr
      %td
        = f.label :content
      %td
        = f.text_area :content
    %tr
      %td{ colspan: 2 }
        = f.submit